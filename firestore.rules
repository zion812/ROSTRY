rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /*
     * DEPRECATED: This rules file is deprecated and only maintained for backwards compatibility.
     * The canonical security rules are now located in 'firebase/firestore.rules'.
     * 'firebase/firestore.rules' enforces access via custom claims (role, verified) 
     * which are managed by Cloud Functions.
     *
     * To deploy canonical rules:
     * firebase deploy --only firestore:rules
     *
     * Ensure firebase.json points to 'firebase/firestore.rules'.
     */
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
