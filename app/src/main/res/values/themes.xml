<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
    ROSTRY Material 3 Theme
    Primary brand colors from the Tiered Color System.
    Compose handles role-based theming via ROSTRYTheme().
    This XML theme is for View-based surfaces and system chrome.
    -->
    <style name="Theme.ROSTRY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/brand_green_dark</item>
        
        <!-- Secondary/Accent -->
        <item name="colorSecondary">@color/general_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/brand_green_light</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/neutral_bg</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/neutral_text_primary</item>
        
        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/brand_green</item>
        <item name="android:navigationBarColor">@color/neutral_bg</item>
    </style>
</resources>